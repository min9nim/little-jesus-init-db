{
  "compileOnSave": false,
  "compilerOptions": {
    // 언어 환경
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "esnext",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "types/*": [
        "types/*"
      ]
    },
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    // 빌드 환경
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "outDir": "dist/",
    // tsx test
    "jsx": "react",
    // 데코레이션
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    //lint
    "strict": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "noEmitHelpers": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "types/*.d.ts"
  ],
  "exclude": []
}